<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/middle_dimen"
    android:background="@color/white"
   >

    <TextView
        android:id="@+id/tvKey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text"
        android:textColor="@color/black"
        android:ellipsize="end"
        tools:text="@string/txt_device_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text"
        android:textColor="@color/black"
        android:ellipsize="end"
        tools:text="@string/txt_mock"
        app:layout_constraintStart_toEndOf="@id/tvKey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvKey"
        app:layout_constraintBottom_toBottomOf="@id/tvKey"
        app:layout_constraintHorizontal_weight="1" />
</androidx.constraintlayout.widget.ConstraintLayout>